ifndef config
  config=debug64
endif
export config

PROJECTS := picasso2_sw zlib png gif jpeg psx_image psxm_image_gif psxm_image_jpeg psxm_image_png

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

picasso2_sw: 
	@echo "==== Building picasso2_sw ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f picasso2_sw.make

zlib: 
	@echo "==== Building zlib ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f zlib.make

png: zlib
	@echo "==== Building png ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f png.make

gif: 
	@echo "==== Building gif ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f gif.make

jpeg: 
	@echo "==== Building jpeg ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f jpeg.make

psx_image: picasso2_sw
	@echo "==== Building psx_image ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f psx_image.make

psxm_image_gif: gif psx_image
	@echo "==== Building psxm_image_gif ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f psxm_image_gif.make

psxm_image_jpeg: jpeg psx_image
	@echo "==== Building psxm_image_jpeg ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f psxm_image_jpeg.make

psxm_image_png: png psx_image
	@echo "==== Building psxm_image_png ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f psxm_image_png.make

clean:
	@${MAKE} --no-print-directory -C . -f picasso2_sw.make clean
	@${MAKE} --no-print-directory -C . -f zlib.make clean
	@${MAKE} --no-print-directory -C . -f png.make clean
	@${MAKE} --no-print-directory -C . -f gif.make clean
	@${MAKE} --no-print-directory -C . -f jpeg.make clean
	@${MAKE} --no-print-directory -C . -f psx_image.make clean
	@${MAKE} --no-print-directory -C . -f psxm_image_gif.make clean
	@${MAKE} --no-print-directory -C . -f psxm_image_jpeg.make clean
	@${MAKE} --no-print-directory -C . -f psxm_image_png.make clean

